    Layout = "~/Views/Shared/_BitLayout.cshtml";
}


<head>


    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width initial-scale=1.0">
    <title>CoinInvest | Invoice</title>
    <!-- GLOBAL MAINLY STYLES-->
    <link href="~/Content/NewVend/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/NewVend/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/NewVend/line-awesome/css/line-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/NewVend/themify-icons/css/themify-icons.css" rel="stylesheet" />
    <link href="~/Content/NewVend/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/NewVend/toastr/toastr.min.css" rel="stylesheet" />

    <!-- PLUGINS STYLES-->
    <!-- THEME STYLES-->
    <link href="~/Content/Assetss/main.css" rel="stylesheet" />
    @*<link href="assets/css/main.css" rel="stylesheet" />*@
    <!-- PAGE LEVEL STYLES-->
    <link href="~/Content/Assetss/pages/invoice.css" rel="stylesheet" />
    @*<link href="assets/css/pages/invoice.css" rel="stylesheet" />*@

    @*<title>@ViewBag.Title</title>*@
</head>

<body>

    <div class="wrapper content-wrapper">
        <!-- START PAGE CONTENT-->
        <div class="page-content fade-in-up">

            <div class="row">

                <div class="col-lg-3 col-md-6 col-md-offset-3">
                    <div class="ibox widget-stat">
                        <div class="ibox-body">
                            <h2 class="m-b-5">01</h2>
                            <div class="text-muted m-b-20">Basic Plan</div><i class="ti-shopping-cart widget-stat-icon text-success"></i>
                            <div class="progress m-b-5">
                                <div class="progress-bar progress-bar-warning" role="progressbar" style="width:50%; height:5px;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="d-flex justify-content-between"><small>Progress</small><span class="text-warning font-12"><i class="fa fa-level-down"></i> -12%</span></div>
                        </div>
                    </div>
                </div>


                <div class="col-lg-3 col-md-6 col-md-offset-3">
                    <div class="ibox widget-stat">
                        <div class="ibox-body">
                            <h2 class="m-b-5">$110</h2>
                            <div class="text-muted m-b-20">TOTAL INCOME</div><i class="la la-money widget-stat-icon text-success"></i>
                            <div class="progress m-b-5">
                                <div class="progress-bar progress-bar-success" role="progressbar" style="width:50%; height:5px;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="d-flex justify-content-between"><small>Progress</small><span class="text-success font-12"><i class="fa fa-level-up"></i> +33%</span></div>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <a href="~/user/dashboard" class="btn btn-link">See available plans</a>
            </div>
        </div>

    </div>

            <script src="~/Content/NewVend/jquery/dist/jquery.min.js" type="text/javascript"></script>
            <script src="~/Content/NewVend/popper.js/dist/umd/popper.min.js" type="text/javascript"></script>
            <script src="~/Content/NewVend/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
            <script src="~/Content/NewVend/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
            <script src="~/Content/NewVend/jquery-idletimer/dist/idle-timer.min.js" type="text/javascript"></script>
            <script src="~/Content/NewVend/toastr/toastr.min.js" type="text/javascript"></script>

            <!-- PAGE LEVEL PLUGINS-->
            <!-- CORE SCRIPTS-->
            <script src="~/Content/Assetss/Js/app.js" type="text/javascript"></script>

            <!-- PAGE LEVEL SCRIPTS-->
</body>