@using Microsoft.AspNet.Identity
@{
    Layout = "~/Views/Shared/_Invoice.cshtml";
}

<div class="page-content fade-in-up">
    <div class="ibox invoice">
        <div class="invoice-header">
            <div class="row">
                <div class="col-6">

                    @*<div class="invoice-logo">
                        <img src="assets/img/logos/logo-vue.png" height="65px" />
                    </div>*@

                    <div class="invoice-logo">
                       
                        <img src="~/Content/assets/images/cta_img.jpg" alt=""/>
                    </div>
                    <div>
                        <div class="m-b-5 font-bold">Invoice from</div>
                        <div>CoinInvest Inc.</div>
                        <ul class="list-unstyled m-t-10">
                            <li class="m-b-5"><span class="font-strong">A:</span> San Francisco, CA 94103 Market Street</li>
                            <li class="m-b-5"><span class="font-strong">W:</span> admin@coininvest.com</li>
                            <li><span class="font-strong">P:</span> (123) 456-2112</li>
                        </ul>
                    </div>
                </div>
                <div class="col-6 text-right">
                    <div class="clf" style="margin-bottom:30px;">
                        <dl class="row pull-right" style="width:250px;">
                            <dt class="col-sm-6">Invoice Time</dt>
                            <dd class="col-sm-6">@DateTime.Now.ToShortTimeString()</dd>
                            <dt class="col-sm-6">Issue Date</dt>
                            <dd class="col-sm-6">@DateTime.Now.ToShortDateString()</dd>
                            <dt class="col-sm-6">Account No.</dt>
                            <dd class="col-sm-6">1450012</dd>
                        </dl>
                    </div>
                    <div>
                        <div class="m-b-5 font-bold">Invoice To</div>
                        <div>@HttpContext.Current.User.Identity.GetUserName()</div>
                        <ul class="list-unstyled m-t-10">
                            <li class="m-b-5">San Francisco, 548 Market St.</li>
                            <li class="m-b-5">@HttpContext.Current.User.Identity.GetUserName()</li>
                            <li>(123) 279-4058</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped no-margin table-invoice">
            <thead>
                <tr>
                    <th>Item Description</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th class="text-right">Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <div><strong>Basic Plan</strong></div><small>This gives you 50% return on investment.</small>
                    </td>
                    <td>1</td>
                    <td>$100.00</td>
                    <td>$100.00</td>
                </tr>
                <tr>
                    <td>
                        <div><strong>Maturity Time</strong></div><small>This plan matures after two weeks</small>
                    </td>
                    <td>1</td>
                    <td>$150.00</td>
                    <td>$150.00</td>
                </tr>
                <tr>
                    <td>
                        <div><strong>Bitcoin Wallet</strong></div><small>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small>
                    </td>
                    <td>-</td>
                    <td>$0.00</td>
                    <td>$0.00</td>
                </tr>
            </tbody>
        </table>
        <table class="table no-border">
            <thead>
                <tr>
                    <th></th>
                    <th width="15%"></th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-right">
                    <td>Subtotal:</td>
                    <td>$100</td>
                </tr>
                <tr class="text-right">
                    <td>TAX 0%:</td>
                    <td>$0</td>
                </tr>
                <tr class="text-right">
                    <td class="font-bold font-18">TOTAL:</td>
                    <td class="font-bold font-18">$100</td>
                </tr>
            </tbody>
        </table>
        <div class="text-right">

            <button class="btn btn-info" type="button" onclick="javascript:window.print();"><i class="ti-printer m-r-5"></i> Print</button>
            <form action="~/user/register1" method="post">
                <button class="btn btn-info" type="submit"><i class="ti-money m-r-5"></i> Pay Now</button>
            </form>
            
        </div>
    </div>
</div>
